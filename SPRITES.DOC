           X,Y    : Integer;
           Size   : Word;


           FUNCTION GetX:Integer;
           FUNCTION GetY:Integer;
           PROCEDURE Capture(x1,y1,x2,y2: Integer);
           PROCEDURE Show;
           PROCEDURE SetX(I : Integer);
           PROCEDURE SetY(I : Integer);
           PROCEDURE Move(ToX,ToY : Integer);
           PROCEDURE SaveSprite(Filename : String12);
